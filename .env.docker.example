# Trabaholink Docker Environment Variables
# Copy this file to .env.docker and update with your values
# Usage: docker-compose --env-file .env.docker up

# ============================================
# Django Settings
# ============================================
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ============================================
# Database Configuration
# ============================================
DB_NAME=trabaholink
DB_USER=postgres
DB_PASSWORD=postgres_secure_password_123
DB_HOST=db
DB_PORT=5432

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379

# ============================================
# Application Ports
# ============================================
WEB_PORT=8000
DB_PORT=5432
REDIS_PORT=6379

# ============================================
# Startup Configuration
# ============================================
RUN_MIGRATIONS=true
COLLECT_STATIC=true

# ============================================
# Optional: Create Superuser on First Run
# ============================================
# Uncomment and set these to auto-create admin user
# DJANGO_SUPERUSER_USERNAME=admin
# DJANGO_SUPERUSER_EMAIL=admin@trabaholink.com
# DJANGO_SUPERUSER_PASSWORD=admin123

# ============================================
# Email Configuration (Optional)
# ============================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production, use SMTP:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-email-password

# ============================================
# External APIs (if needed)
# ============================================
# Add your API keys here
# GOOGLE_MAPS_API_KEY=your-google-maps-key
# PHILSYS_API_KEY=your-philsys-key
