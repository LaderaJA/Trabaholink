# Production Environment Variables for Trabaholink
# Copy this to .env.production and update with your production values
# Usage: docker-compose -f docker-compose.yml -f docker-compose.prod.yml --env-file .env.production up -d

# ============================================
# Django Settings
# ============================================
DEBUG=False
SECRET_KEY=your-super-secret-production-key-change-this-immediately
ALLOWED_HOSTS=localhost,127.0.0.1,114.29.239.240,yourdomain.com,www.yourdomain.com,your-ngrok-subdomain.ngrok-free.app

# ============================================
# Domain Configuration
# ============================================
DOMAIN_NAME=yourdomain.com

# ============================================
# Security Settings (Production - Strict)
# ============================================
# CSRF Protection
CSRF_COOKIE_SECURE=True
CSRF_COOKIE_HTTPONLY=True
CSRF_COOKIE_SAMESITE=Strict
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://your-ngrok-subdomain.ngrok-free.app

# Session Security
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict
SESSION_COOKIE_AGE=1209600

# SSL/TLS Security
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Browser Security Headers
X_FRAME_OPTIONS=DENY
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin

# CORS Settings
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# Database Configuration
# ============================================
DB_NAME=trabaholink_prod
DB_USER=trabaholink_user
DB_PASSWORD=very-secure-database-password-123
DB_HOST=db
DB_PORT=5432

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=very-secure-redis-password-456

# ============================================
# Application Ports (Internal - Nginx handles external)
# ============================================
WEB_PORT=8000

# ============================================
# Startup Configuration
# ============================================
RUN_MIGRATIONS=true
COLLECT_STATIC=true

# ============================================
# Superuser (Create on first deployment)
# ============================================
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_PASSWORD=secure-admin-password

# ============================================
# Email Configuration (REQUIRED for production)
# ============================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# ============================================
# External APIs
# ============================================
# Add your production API keys here
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
PHILSYS_API_KEY=your-philsys-api-key

# ============================================
# Google OAuth Configuration
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================
# AWS S3 (Optional - for media file storage)
# ============================================
# USE_S3=True
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=trabaholink-media
# AWS_S3_REGION_NAME=us-east-1

# ============================================
# Sentry (Optional - for error tracking)
# ============================================
# SENTRY_DSN=your-sentry-dsn-url

# ============================================
# Monitoring (Optional)
# ============================================
# NEW_RELIC_LICENSE_KEY=your-new-relic-key
# NEW_RELIC_APP_NAME=Trabaholink Production
